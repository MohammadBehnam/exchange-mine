<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PSExchange" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Divider" parent="android:Theme.Light">
        <item name="android:background">@color/gray_700</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="ArrowCircle" parent="android:Theme.Light">
        <item name="android:layout_width">@dimen/arrow_circle_size</item>
        <item name="android:layout_height">@dimen/arrow_circle_size</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
        <item name="android:paddingBottom">@dimen/margin_extra_small</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="SmallText" parent="DefaultText">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MediumText" parent="DefaultText">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="LargeText" parent="DefaultText">
        <item name="android:textSize">@dimen/text_large</item>
    </style>
</resources>